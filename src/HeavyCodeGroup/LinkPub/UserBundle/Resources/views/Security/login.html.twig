{% extends "FOSUserBundle::layout.html.twig" %}
{% block body %}
{% block fos_user_content %}
    {% if error %}
        <div>{{ error|trans }}</div>
    {% endif %}
    <br>
    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin" >
        <h2 class="form-signin-heading">Please sign in</h2>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"  class="form-control" placeholder="Username">

        <input type="password"  id="password" name="_password" required="required" class="form-control" placeholder="Password" >
        <label class="checkbox">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on"> Remember me
        </label>
        {#<input class="btn btn-lg btn-primary btn-block" type="submit"  id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />#}
        <button class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}">Sign in</button>
    </form>
{% endblock fos_user_content %}
{% endblock %}
